@page "/car"
@using DealershipLibrary.Vehicle.Cars
@using DealershipLibrary
@using System.Collections.Generic;
@using System;
@using System.Linq;

<h3>Car</h3>

<select @onchange="(e)=>SelectColor(e.Value.ToString())">
    @foreach (var item in carColorsList)
    {
        <option value="@item">@item</option>
    }
</select>

<select @onchange="(e)=>SelectModel(e.Value.ToString())">
    @foreach (var item in carModelsList)
    {
        <option value="@item">@item</option>
    }
</select>

<button @onclick="@(() => add())">Add</button>


@code {
    [Parameter] 
    public EventCallback<string> OnClick { get; set; }
    public List<IVehicle> carlist { get; set; }


    List<string> carModelsList = Extensions.GetEnumItems(typeof(CarModels));
    List<string> carColorsList = Extensions.GetEnumItems(typeof(CarColors));
    

    CarColors color;
    void SelectColor(string value)
    {
        this.color = (CarColors)System.Enum.Parse(typeof(CarColors), value);
    }

    CarModels model;
    void SelectModel(string value)
    {
        this.model = (CarModels)System.Enum.Parse(typeof(CarModels), value);
    }

    //public Car x;
    void add()
    {
        //carlist.Add(new Car(model, color));
        OnClick.InvokeAsync("Car Added");
    }
}